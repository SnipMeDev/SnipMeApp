<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance -->

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.BrandTitle" parent="TextAppearance.Headline4">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextAppearance.CodeItemTitle" parent="TextAppearance.Headline6">
        <item name="fontFamily">@font/inconsolata_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MainTitle" parent="TextAppearance.Headline5">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextAppearance.BottomTitle" parent="TextAppearance.Headline5">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.VersionLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Warning" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Filter" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextAppearance.Filter.Selected" parent="TextAppearance.Filter">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ShareHelper" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/accent</item>
        <item name="lineSpacing">20dp</item>
    </style>

    <style name="TextAppearance.DonateTitle" parent="TextAppearance.Headline5">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="fontWeight">300</item>
    </style>

    <!-- Style -->

    <style name="ColoredToolbar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="FormInputField">
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/outlined_input_background</item>
        <item name="android:padding">@dimen/spacing_regular</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="OutlinedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="WarningField">
        <item name="android:drawableStart">@drawable/warning</item>
        <item name="android:drawablePadding">@dimen/spacing</item>
        <item name="android:background">@drawable/warning_background</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.Warning</item>
    </style>

    <style name="MainTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MainTitle</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CodeItemTitle">
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.CodeItemTitle</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InfoBarTitle">
        <item name="android:textAppearance">@style/TextAppearance.CodeItemTitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ShareHelperTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.ShareHelper</item>
    </style>

    <style name="SnippetEditField">
        <item name="android:textAppearance">@style/TextAppearance.CodeItemTitle</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CodeEditField">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item> <!-- Takes cursor color from text color -->
    </style>

    <style name="DropdownInputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/accent</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/white</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchInputField">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:padding">@dimen/spacing_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:drawablePadding">@dimen/spacing</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.SnipMe.MainButton</item>
    </style>

    <style name="FilterChip">
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:minWidth">@dimen/snippet_filter_min_width</item>
        <item name="android:paddingTop">@dimen/spacing</item>
        <item name="android:paddingBottom">@dimen/spacing</item>
        <item name="android:paddingStart">@dimen/spacing_regular</item>
        <item name="android:paddingEnd">@dimen/spacing_regular</item>
    </style>

    <!-- ThemeOverlay -->

    <style name="ThemeOverlay.SnipMe.MainButton" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/accentSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>